
    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TimeManager">

    <Style  x:Key="DefaultMainMenuButtonContent" TargetType="{x:Type Grid}">
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style  x:Key="DefaultBorderContent" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="Snow"/>
        <Setter Property="BorderBrush" Value="#c5c9c3"/>
        <Setter Property="BorderThickness" Value="1.5 1 1.5 1"/>
        <!--<Setter Property="Background" Value="Snow"/>-->
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Margin" Value="3 0 3 0"/>
       
        <Setter Property="SnapsToDevicePixels" Value="True"/>

    </Style>




</ResourceDictionary>